                            <ContextMenu>
                                <MenuItem x:Name="contextmenu0" Header="체크인 (_I)" Click="contextmenu0_Click"/>
                                <MenuItem x:Name="contextmenu1" Header="수정 (_M)" Click="contextmenu1_Click"/>
                                <!--MenuItem x:Name="contextmenu2" Header="방변경 (_C)" Click="contextmenu2_Click"/-->
                                <!--<MenuItem x:Name="contextmenu3" Header="빌링 (_B)" Click="contextmenu3_Click"/>-->
                                <MenuItem x:Name="contextmenu4" Header="체크아웃 (_O)" Click="contextmenu4_Click" />
                                <Separator/>
                                <MenuItem x:Name="contextmenu6" Header="청소">
                                    <MenuItem x:Name="contextmenu6_sub0" Header="요청" Click="contextmenu6_sub0_Click"/>
                                    <MenuItem x:Name="contextmenu6_sub1" Header="완료" Click="contextmenu6_sub1_Click"/>
                                    <MenuItem x:Name="contextmenu6_sub2" Header="컨펌" Click="contextmenu6_sub2_Click"/>
                                </MenuItem>
                                <MenuItem x:Name="contextmenu7" Header="세탁">
                                    <MenuItem x:Name="contextmenu7_sub0" Header="요청" Click="contextmenu7_sub0_Click"/>
                                    <MenuItem x:Name="contextmenu7_sub1" Header="완료" Click="contextmenu7_sub1_Click"/>
                                </MenuItem>
                                <MenuItem x:Name="contextmenu5" Header="우편물">
                                    <MenuItem x:Name="contextmenu5_sub0" Header="수령 요청" Click="contextmenu5_sub0_Click"/>
                                    <MenuItem x:Name="contextmenu5_sub1" Header="수령 완료" Click="contextmenu5_sub1_Click"/>
